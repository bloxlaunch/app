{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bloxlaunch",
  "version": "0.3.0",
  "identifier": "com.bloxlaunch",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Bloxlaunch",
        "width": 1240,
        "height": 790,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYzMkYwNUVENzNCQURDOTQKUldTVTNMcHo3UVV2OCtVcnVsamQvUkZ3Sm44UmVQdWI4emp4c3E4RnloV2R1aDVmMzk1NDdRMnkK",
      "endpoints": [
        "https://github.com/bloxlaunch/app/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
